---
export interface Props {
	copy: string;
	image: string;
	link: string;
}

const { link, copy, image } = Astro.props;
---

<div class="max-w-sm rounded-sm border shadow-md bg-gray-800 border-gray-700">
	<a href={link}>
		<img class="rounded-t-md" src={image} alt="" />
		<div class="p-5">
			<p class="mb-3 font-normal text-gray-400">{copy}</p>
		</div>
	</a>
</div>
