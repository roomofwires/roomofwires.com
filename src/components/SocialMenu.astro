---
const { location } = Astro.props;
---

<div x-data="{ open: false }">
  <a
    href="#"
    class="block lg:inline-block lg:mt-0 ml-4"
    x-on:click="open = ! open"
  >
    <p class="text-gray-400 hover:text-gray-100">Social</p>
  </a>
  <div class="relative">
    <div
      class="absolute w-36 right-14 -top-4 lg:-right-2 lg:top-6 px-4 p-4 space-y-1.5 brutal text-right bg-coal z-10"
      x-cloak
      x-show="open"
      x-transition
      @click.outside="open = false"
    >
      <a
        href="https://discord.gg/3UZd5UZzqg"
        target="_blank"
        class="block ml-4 text-gray-400 hover:text-gray-100">Discord</a
      >
      <a
        href="https://www.youtube.com/@roomofwires"
        target="_blank"
        class="block ml-4 text-gray-400 hover:text-gray-100">YouTube</a
      >
      <a
        href="https://facebook.com/roomofwires"
        target="_blank"
        class="block ml-4 text-gray-400 hover:text-gray-100">Facebook</a
      >
      <a
        href="https://twitter.com/roomofwires"
        target="_blank"
        class="block ml-4 text-gray-400 hover:text-gray-100">Twitter</a
      >
      <a
        href="https://soundcloud.com/roomofwires"
        target="_blank"
        class="block ml-4 text-gray-400 hover:text-gray-100">Soundcloud</a
      >
      <a
        href="https://www.modulargrid.net/e/racks/command_center/155739"
        target="_blank"
        class="block ml-4 text-gray-400 hover:text-gray-100">ModularGrid</a
      >
      <a
        href="https://github.com/roomofwires"
        target="_blank"
        class="block ml-4 text-gray-400 hover:text-gray-100">GitHub</a
      >
      <a href="/join" class="block ml-4 text-gray-400 hover:text-gray-100"
        >Mailing List</a
      >
    </div>
  </div>
</div>
