---
import Menu from "../components/Menu.astro";

const { location } = Astro.props;
---

<nav class="bg-gray-900 py-4">
  <div
    class="container flex justify-between mx-auto px-4 max-w-md lg:max-w-4xl md:max-w-2xl text-xs"
  >
    <div class="items-center flex-shrink-0 mr-6">
      <img class="h-5 mt-0.5" src="/images/menu-logo.png" />
    </div>
    <div class="hidden lg:flex brutal mt-0.5">
      <Menu location={location} />
    </div>
    <div class="flex lg:hidden" x-data="{ open: false }">
      <div class="space-y-1.5" x-on:click="open = ! open">
        <span class="block w-8 h-1 bg-gold"></span>
        <span class="block w-8 h-1 bg-gold"></span>
        <span class="block w-8 h-1 bg-gold"></span>
      </div>
      <div class="relative">
        <div
          class="absolute right-0 top-10 px-8 pb-4 brutal bg-gray-900 z-10"
          x-show="open"
          x-transition.enter.duration.500ms
          x-transition.leave.duration.250ms
        >
          <Menu location={location} />
        </div>
      </div>
    </div>
  </div>
</nav>
