---
const { location } = Astro.props;
---

<nav class="flex items-center justify-between flex-wrap bg-gray-900 p-3 h-14">
    <div class="container flex mx-auto max-w-4xl">
        <div class="items-center flex-shrink-0 text-white mr-6">
            <img class="h-4" src="/images/menu-logo.png" />
        </div>
        <div class="text-right brutal w-full block flex-grow lg:flex lg:items-center lg:w-auto">
            <div class="text-sm lg:flex-grow">
                <a href="/" class="block mt-4 lg:inline-block lg:mt-0 mr-4">
                    {location=="latest" ? <p class="text-gray-100">Latest</p> : <p class="text-gray-400 hover:text-gray-100">Latest</p>}   
                </a>
                <a href="/inside" class="block mt-4 lg:inline-block lg:mt-0 mr-4">
                    {location=="inside" ? <p class="text-gray-100">Inside</p> : <p class="text-gray-400 hover:text-gray-100">Inside</p>}   
                </a>
                <a href="/releases" class="block mt-4 lg:inline-block lg:mt-0 mr-4">
                    {location=="releases" ? <p class="text-gray-100">Releases</p> : <p class="text-gray-400 hover:text-gray-100">Releases</p>}   
                </a>
                <a href="/projects" class="block mt-4 lg:inline-block lg:mt-0 mr-4">
                    {location=="projects" ? <p class="text-gray-100">Projects</p> : <p class="text-gray-400 hover:text-gray-100">Projects</p>}   
                </a>
                <a href="#responsive-header" class="block mt-4 lg:inline-block lg:mt-0 mr-4">
                    {location=="listen" ? <p class="text-gray-100">Listen/Buy</p> : <p class="text-gray-400 hover:text-gray-100">Listen/Buy</p>}   
                </a>
                <a href="#responsive-header" class="block mt-4 lg:inline-block lg:mt-0">
                    {location=="social" ? <p class="text-gray-100">Social</p> : <p class="text-gray-400 hover:text-gray-100">Social</p>}   
                </a>
            </div>
        </div>
    </div>
</nav>
