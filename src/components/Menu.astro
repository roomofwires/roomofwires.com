---
const { location } = Astro.props;
---

<a href="/latest" class="block lg:inline-block lg:mt-0 ml-4">
  {
    location == "latest" ? (
      <p class="text-gray-100">Latest</p>
    ) : (
      <p class="text-gray-400 hover:text-gray-100">Latest</p>
    )
  }
</a>
<a href="/inside" class="block lg:inline-block lg:mt-0 ml-4">
  {
    location == "inside" ? (
      <p class="text-gray-100">Inside</p>
    ) : (
      <p class="text-gray-400 hover:text-gray-100">Inside</p>
    )
  }
</a>
<a href="/releases" class="block lg:inline-block lg:mt-0 ml-4">
  {
    location == "releases" ? (
      <p class="text-gray-100">Releases</p>
    ) : (
      <p class="text-gray-400 hover:text-gray-100">Releases</p>
    )
  }
</a>
<a href="/projects" class="block lg:inline-block lg:mt-0 ml-4">
  {
    location == "projects" ? (
      <p class="text-gray-100">Projects</p>
    ) : (
      <p class="text-gray-400 hover:text-gray-100">Projects</p>
    )
  }
</a>
<a href="#" class="block lg:inline-block lg:mt-0 ml-4">
  {
    location == "listen" ? (
      <p class="text-gray-100">Listen</p>
    ) : (
      <p class="text-gray-400 hover:text-gray-100">Listen</p>
    )
  }
</a>
<div x-data="{ open: false }">
  <a
    href="#"
    class="block lg:inline-block lg:mt-0 ml-4"
    x-on:click="open = ! open"
  >
    <p class="text-gray-400 hover:text-gray-100">Social</p>
  </a>
  <div class="relative">
    <div
      class="absolute right-14 -top-4 lg:-right-2 lg:top-6 px-4 p-4 space-y-1.5 brutal text-right bg-gray-900 z-10"
      x-show="open"
      x-transition
    >
      <a
        href="https://discord.gg/3UZd5UZzqg"
        target="_blank"
        class="block ml-4 text-gray-400 hover:text-gray-100">Discord</a
      >
      <a
        href="https://www.youtube.com/@roomofwires"
        target="_blank"
        class="block ml-4 text-gray-400 hover:text-gray-100">YouTube</a
      >
      <a
        href="https://facebook.com/roomofwires"
        target="_blank"
        class="block ml-4 text-gray-400 hover:text-gray-100">Facebook</a
      >
      <a
        href="https://twitter.com/roomofwires"
        target="_blank"
        class="block ml-4 text-gray-400 hover:text-gray-100">Twitter</a
      >
      <a
        href="https://soundcloud.com/roomofwires"
        target="_blank"
        class="block ml-4 text-gray-400 hover:text-gray-100">Soundcloud</a
      >
      <a
        href="https://www.modulargrid.net/e/racks/command_center/155739"
        target="_blank"
        class="block ml-4 text-gray-400 hover:text-gray-100">ModularGrid</a
      >
      <a
        href="https://github.com/roomofwires"
        target="_blank"
        class="block ml-4 text-gray-400 hover:text-gray-100">GitHub</a
      >
    </div>
  </div>
</div>
