---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	@font-face {
		font-family: 'BrutalTypeBlack';
		src: url('/fonts/brutal_type_black.woff') format('woff');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}

	.brutal {
		font-family: 'BrutalTypeBlack';
	}
</style>
