---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Room of Wires">
  <main>
    <div
      class="h-screen bg-cover bg-no-repeat bg-fixed bg-center bg-[url('/images/masthead-movie.gif')]"
    >
      <div class="h-full flex items-center justify-center text-gold brutal">
        <div class="text-center mx-12">
          <a
            href="https://rednetic.bandcamp.com/album/fever-switch"
            target="_blank"
          >
            <h1 class="text-3xl">FRAGILE MELODIC MOMENTS</h1>
            <p class="pt-0">
              Room of Wires have never met - together they create uneasy
              electronic music
            </p>
          </a>
          <p class="pt-4">
            <a href="/latest">[ enter room of wires ]</a>
          </p>
        </div>
      </div>
    </div>
  </main>
</Layout>
