	},
];
---

<Layout title="Room of Wires">
	<main>
		<section class="container bg-gray-400">
			<div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-4 bg-gray-200 max-w-4xl p-4 mx-auto">
				{
					items.map(({ link, copy, image }) => (
						<Card link={link} copy={copy} image={image} />
					))
				}
			</div>
		</section>
	</main>
</Layout>
