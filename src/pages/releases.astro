---
import Layout from "../layouts/Layout.astro";
import Menu from "../components/Menu.astro";
import Masthead from "../components/Masthead.astro";
import Card from "../components/Card.astro";

import latest from "../data/releases.json";
---

<Layout title="Room of Wires">
	<main>
		<div class="bg-camo">
			<Menu location="releases" />
			<div
				class="pt-4 container mx-auto max-w-md lg:max-w-4xl md:max-w-2xl"
			>
				<Masthead
					title="RELEASES"
					tagline="The full audio story from ground zero"
				/>
				<div
					class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-4 mx-auto"
				>
					{
						latest.posts.map(({ link, image, copy }) => (
							<Card link={link} copy={copy} image={image} />
						))
					}
				</div>
			</div>
		</div>
	</main>
</Layout>
