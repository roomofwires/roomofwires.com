---
import Layout from "../layouts/Layout.astro";
import NavBar from "../components/NavBar.astro";
import Masthead from "../components/Masthead.astro";
import Card from "../components/Card.astro";
import Footer from "../components/Footer.astro";

import posts from "../data/posts.json";
---

<Layout title="Room of Wires">
  <main>
    <div class="bg-[url('/images/Background5.jpg')] bg-repeat bg-center">
      <NavBar location="latest" />
      <div
        class="container pt-[72px] px-4 mx-auto max-w-md lg:max-w-6xl md:max-w-3xl"
      >
        <Masthead
          title="FRAGILE MELODIC MOMENTS"
          tagline="Room of Wires have never met - together they create uneasy electronic music"
        />
        <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-4">
          {
            posts.posts.map(
              ({ link, image, copy }, index) =>
                index < 12 && <Card link={link} image={image} copy={copy} />
            )
          }
        </div>
      </div>
      <p class="text-center text-sand pt-4">
        <a href="/archive">[ archive ]</a>
      </p>
      <footer class="py-3">
        <div class="container mx-auto">
          <p class="m-0 text-center text-xs text-gray-800">
            Copyright &copy; Room of Wires 2013-2022
          </p>
        </div>
      </footer>
    </div>
  </main>
</Layout>
